<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout 
        android:background="#4682B4"
        android:layout_width="match_parent"
         android:layout_height="0dp"
        android:layout_weight="1"
        >
        <ImageView 
            android:id="@+id/img_item_head"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/test_img"
            />
        
    </LinearLayout>
    
     <LinearLayout 
        android:layout_width="match_parent"
         android:layout_height="0dp"
        android:layout_weight="3"
        >
         
         <TextView 
             android:layout_margin="5dp"
             android:id="@+id/text_item_content"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="测试内容http://"
             />
     </LinearLayout>
     
     
      <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
          <TextView 
              android:id="@+id/text_item_dianzan"
              android:layout_width="wrap_content"
              android:layout_height="10dp"
              android:layout_marginLeft="2dp"
              android:text="点赞数10"
              />


         
          <TextView
              android:id="@+id/text_item_pinglun"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentRight="true"
              android:layout_alignParentTop="true"
              android:layout_marginRight="10dp"
              android:text="评论数10" />
          
           <TextView
              android:id="@+id/text_item_zhuanfa"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_toLeftOf="@id/text_item_pinglun"
              android:layout_marginRight="5dp"
              android:text="转发数10" />
          
      </RelativeLayout>

</LinearLayout>
